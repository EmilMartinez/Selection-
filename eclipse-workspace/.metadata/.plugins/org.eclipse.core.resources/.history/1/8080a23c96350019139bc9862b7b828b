	this.MilesAwayFromHome = milesAwayFromHome;
	System.out.print(MilesAwayFromHome);
}

public NestedWork(Boolean isItDominicanRepublic) {
	this.IsitDominicanRepublic = isItDominicanRepublic;
	System.out.print(IsitDominicanRepublic);
}

private class Purchases {
